linters: linters_with_defaults(
    line_length_linter = line_length_linter(120),
    object_name_linter = object_name_linter(styles = c("camelCase", "snake_case")),
    trailing_whitespace_linter = NULL,
    trailing_blank_lines_linter = NULL,
    object_usage_linter = NULL
)
exclusions: list(
    "inst/", 
    "tests/testthat/"  # Ensure these paths exist
)
encoding: "UTF-8" # Ensure the file is saved with UTF-8 encoding